---
const {src} = Astro.props;
const {poster="", lightOrDark="both"} = Astro.props; // both, light, dark, invertLight, invertDark
let visibilityClass = ""
let invertClass = ""

if (lightOrDark!="both"){
    switch (lightOrDark) {
        case "light": visibilityClass = "light-only"; break;
        case "dark": visibilityClass = "dark-only"; break;
        case "invertLight": invertClass = "invert-light"; break;
        case "invertDark": invertClass = "invert-dark"; break;
    }
}
---
<div class={visibilityClass}>
    <video  poster={poster} class={invertClass} controls src={src}/>
    <hr class="mb-1 -mt-5"/>
    <p><slot/></p>
</div>